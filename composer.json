{
	"name": "aoamusat/fortress",
	"description": "A secure, enterprise-grade MVC framework in PHP",
	"keywords": ["framework", "MVC", "security", "middleware", "dependency-injection"],
	"license": "MIT",
	"type": "project",
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"bin": ["fortress"],
	"scripts": {
		"test": "phpunit",
		"test:coverage": "phpunit --coverage-html coverage"
	}
}
